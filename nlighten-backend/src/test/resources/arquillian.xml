<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<engine>
		<property name="deploymentExportPath">target/deployment</property>
	</engine>

	<container qualifier="wildfly_managed" default="true">
		<protocol type="Servlet 3.0"></protocol>
		<configuration>
			<property name="serverConfig">standalone.xml</property>
			<property name="javaVmArguments">-Xms256m -Xmx1024m -XX:MaxPermSize=512m  </property>
		</configuration>
	</container>
	<container qualifier="wildfly_managed_debug" default="false">
		<protocol type="Servlet 3.0"></protocol>
		<configuration>
			<property name="serverConfig">standalone.xml</property>
			<property name="javaVmArguments">-Xms256m -Xmx1024m -XX:MaxPermSize=512m    -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y</property>
		</configuration>
	</container>
</arquillian>
